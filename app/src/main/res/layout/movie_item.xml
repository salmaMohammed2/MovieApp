<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <Button
            android:id="@+id/index"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:background="@drawable/ic_video_24"
            android:text="10"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/movieTitle"
            app:layout_constraintBottom_toTopOf="@id/mainView"
            app:layout_constraintEnd_toEndOf="@id/mainView"
            app:layout_constraintTop_toTopOf="@id/mainView" />

        <TextView
            android:id="@+id/mainView"
            android:layout_width="340sp"
            android:layout_height="100sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/custom_item"
            />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/poster"
            android:layout_width="100sp"
            android:layout_height="130sp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundRectangular"
            app:layout_constraintStart_toStartOf="@id/mainView"
            app:layout_constraintBottom_toBottomOf="@id/mainView"
            android:layout_marginLeft="10sp"
            />

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/poster"
            app:layout_constraintTop_toTopOf="@id/mainView"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:textSize="16sp"
            android:textColor="#D5D7DD"
            />

        <TextView
            android:id="@+id/ratestar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/poster"
            app:layout_constraintTop_toBottomOf="@id/movieTitle"
            android:layout_marginLeft="20sp"
            android:textColor="#f3d60d"
            android:textSize="14sp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:drawableLeft="@drawable/ic_star_rate_24"
            />

        <Button
            android:id="@+id/ClickME"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_happy_12"
            app:layout_constraintBottom_toBottomOf="@id/mainView"
            app:layout_constraintEnd_toEndOf="@id/mainView" />

</androidx.constraintlayout.widget.ConstraintLayout>
